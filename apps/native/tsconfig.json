{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/mobile-ui": ["./src/mobile-ui"],
      "~/screens": ["./src/screens"],
      "~/providers": ["./src/providers"],
      "~/hooks": ["./src/hooks"],
      "~/utils": ["./src/utils"]
    },
    "target": "esnext",
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "downlevelIteration": true,
    "noEmit": true,
    "strictNullChecks": false
  },
  "exclude": ["node_modules", "android", "assets", "bin", "ios"],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".babelrc.js",
    "app.json",
    "package.json",
    "types/**/*.d.ts",
    "src/mobile-ui/components/organisms/bottom-tab-navigator"
  ],
  "typeRoots": ["./types"]
}
