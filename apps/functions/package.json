{
  "name": "@gentlepeople/taleus-functions",
  "private": true,
  "version": "0.0.1",
  "main": "dist/src/index.js",
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx,.json,.yaml --fix",
    "type-check": "tsc --pretty --noEmit"
  },
  "dependencies": {
    "@gentlepeople/eslint-plugin": "workspace:*",
    "@nestjs/common": "10.0.3",
    "@nestjs/config": "3.0.0",
    "@nestjs/core": "10.0.3",
    "@nestjs/platform-express": "10.0.3",
    "@nestjs/testing": "10.0.3",
    "express": "4.18.2",
    "rxjs": "7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "9.5.0",
    "@gentlepeople/eslint-plugin": "workspace:*",
    "@gentlepeople/tsconfig": "workspace:*",
    "@types/eslint": "8.40.2",
    "@types/express": "4.17.20",
    "@types/jest": "29.5.2",
    "@types/node": "20.4.9",
    "eslint": "8.43.0",
    "isolate-package": "1.3.3",
    "jest": "29.6.1",
    "jest-html-reporter": "3.10.1",
    "prettier": "3.0.0",
    "prisma": "5.9.0",
    "reflect-metadata": "0.1.13",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.2"
  },
  "engines": {
    "node": "18",
    "pnpm": "8.10.5"
  },
  "files": [
    "dist",
    ".env"
  ],
  "jest": {
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "coverageReporters": [
      "lcov"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "reporters": [
      "default",
      "../node_modules/jest-html-reporter"
    ],
    "rootDir": "src/presentation",
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  }
}
